doctype html
html(lang='en')
  include ./head.jade
  body
    include ./header.jade
    .container
      .col-lg-12
        form#submission_form.form-horizontal(role='form', method='post', action='/submit')
          .form-group
            label.col-sm-2.control-label(for='name') URL
            .col-sm-10
              input#url.form-control(type='url', name='url', placeholder="http://www.ign.com/wikis/game-of-thrones/Who_Is_Jon_Snow's_Mother", value='')
          .form-group
            label.col-sm-2.control-label(for='email', required='true') Title *
            .col-sm-10
              input#title.form-control(type='text', for='title', name='title', placeholder="Who is John Snow's mother?", value='', data-toggle='tooltip', data-placement='top', title='Aleast a Title is required to Submit!', minlength='15', required='')
          .form-group
            label.col-sm-2.control-label(for='message') Message
            .col-sm-10
              textarea.form-control(rows='4', name='message', minlength='80', placeholder="Jon Snow's mother is unknown, but there are many hints as to who she may be. Got any ideas? Please tell me in comments!")
          .form-group
            label.col-sm-2.control-label(for='name') Submitted By
            .col-sm-10
              input#name.form-control(type='text', name='name', placeholder='George RR Martin', value='')
          .form-group
            .col-sm-10.col-sm-offset-2
              input#submit.btn.btn-primary(name='submit', type='submit', value='SUBMIT')
          .form-group
            .col-sm-10.col-sm-offset-2
  include ./scripts.jade
  script(src='http://cdn.jsdelivr.net/jquery.validation/1.14.0/jquery.validate.min.js')
  script(type='text/javascript').
    $("#submission_form").validate();
    $( "#target" ).keydown(function() {
    if ($('#title').val().length == 0) {
    $('#submit').attr('disabled', 'true');
    } else {
    $('#submit').attr('disabled', 'false');
    }
    }
