doctype html
html
  head
    title Register
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    link(href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css', rel='stylesheet', media='screen')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container
    if(user)
        h1 #{user.username} is already logged in.
        a(href='/logout') Logout
      if(info)
        h4 #{info}
        hr
      if(!user)
          h1 Register Page
          form(role='form', action='/signup', method='post', style='max-width: 300px;')
            .form-group
              input.form-control(type='text', name='twitter', placeholder='Twitter Username')
            .form-group
              input.form-control(type='text', name='name', placeholder='Enter Name')
            .form-group
              input.form-control(type='text', name='username', placeholder='Enter Username')
            .form-group
              input.form-control(type='text', name='email', placeholder='Enter email')
            .form-group
              input.form-control(type='password', name='password', placeholder='Password')
            button.btn.btn-default(type='submit') Submit
            &nbsp;&nbsp;
            a(href='/')
              button.btn.btn-primary(type='button') Cancel
  script(src='http://code.jquery.com/jquery.js')
  script(src='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js')
